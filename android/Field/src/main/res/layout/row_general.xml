<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match" android:gravity="center_vertical"
    android:minHeight="60dp" android:id="@+id/GenLayout">
    <ImageView android:id="@+id/GenImg" android:paddingLeft="10dp"
        android:layout_height="60dip" android:layout_width="50dip"/>
    <RelativeLayout style="@style/FillWidth" android:paddingLeft="20dp">
        <TextView android:id="@+id/GenHeading" style="@style/ListTitleText"
            android:gravity="center_vertical"/>
        <TextView android:id="@+id/GenValue" style="@style/ListSubTitleText"
            android:layout_below="@+id/GenHeading" android:text="@string/present"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</LinearLayout>